@model Projeto_SCFII.Infrastructure.Application.DTO.Usuario.UsuarioUpdateDTO

@{
    ViewData["Title"] = "Dados do Usuário";
}

<div class="card card-details">
    <div class="card-header text-center">
        <h2>Dados do Usuário</h2>
    </div>

    <div class="card-body">
        <!-- Dados Pessoais -->
        <h3 class="mb-3 mt-4 border-bottom pb-2">Dados Pessoais</h3>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Sobrenome" class="form-label">Sobrenome</label>
                <input asp-for="Sobrenome" class="form-control" readonly />
            </div>
            <div class="col-md-12 mb-3">
                <label asp-for="Email" class="form-label">E-mail</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
        </div>

        <!-- Informações Corporativas -->
        <h3 class="mb-3 mt-4 border-bottom pb-2">Informações Corporativas</h3>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="CargoId" class="form-label">Cargo</label>
                <select asp-for="CargoId" asp-items="ViewBag.Cargos" class="form-control" disabled></select>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="DepartamentoId" class="form-label">Departamento</label>
                <select asp-for="DepartamentoId" asp-items="ViewBag.Departamentos" class="form-control" disabled></select>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="RacaId" class="form-label">Raça</label>
                <select asp-for="RacaId" asp-items="ViewBag.Racas" class="form-control" disabled></select>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="GeneroId" class="form-label">Gênero</label>
                <select asp-for="GeneroId" asp-items="ViewBag.Generos" class="form-control" disabled></select>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="TipoUsuarioId" class="form-label">Tipo Usuário</label>
                <select asp-for="TipoUsuarioId" asp-items="ViewBag.TiposUsuario" class="form-control" disabled></select>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="StatusUsuarioId" class="form-label">Status</label>
                <select asp-for="StatusUsuarioId" asp-items="ViewBag.StatusUsuarios" class="form-control" disabled></select>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="DataAdmissao" class="form-label">Data de Admissão</label>
                <input asp-for="DataAdmissao" type="datetime-local" class="form-control" readonly />
            </div>
        </div>
    </div>

    <div class="card-footer text-center">
        <a href="@Url.Action("Index", "Usuario")" class="btn btn-outline-secondary">Voltar</a>
    </div>
</div>
