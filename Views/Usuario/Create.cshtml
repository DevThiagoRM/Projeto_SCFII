@model Projeto_SCFII.Infrastructure.Application.DTO.Usuario.UsuarioCreateDTO

@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<div class="card card-create">
    <div class="card-header text-center">
        <h2>Cadastrar Novo Usuário</h2>
    </div>

    <div class="card-body">
        <form asp-action="Create" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Dados Pessoais -->
            <h3 class="mb-3 mt-4 border-bottom pb-2">Dados Pessoais</h3>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Sobrenome" class="form-label">Sobrenome</label>
                    <input asp-for="Sobrenome" class="form-control" placeholder="Digite o sobrenome" />
                    <span asp-validation-for="Sobrenome" class="text-danger small"></span>
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="Email" class="form-label">E-mail</label>
                    <input asp-for="Email" class="form-control" placeholder="exemplo@email.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
            </div>

            <!-- Credenciais de Acesso -->
            <h3 class="mb-3 mt-4 border-bottom pb-2">Credenciais de Acesso</h3>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Senha" class="form-label">Senha</label>
                    <input asp-for="Senha" type="password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Senha" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ConfirmarSenha" class="form-label">Confirmar Senha</label>
                    <input asp-for="ConfirmarSenha" type="password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
                </div>
            </div>

            <!-- Informações Corporativas -->
            <h3 class="mb-3 mt-4 border-bottom pb-2">Informações Corporativas</h3>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CargoId" class="form-label">Cargo</label>
                    <select asp-for="CargoId" asp-items="ViewBag.Cargos" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="CargoId" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DepartamentoId" class="form-label">Departamento</label>
                    <select asp-for="DepartamentoId" asp-items="ViewBag.Departamentos" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="DepartamentoId" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="RacaId" class="form-label">Raça</label>
                    <select asp-for="RacaId" asp-items="ViewBag.Racas" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="RacaId" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="GeneroId" class="form-label">Gênero</label>
                    <select asp-for="GeneroId" asp-items="ViewBag.Generos" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="GeneroId" class="text-danger small"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="TipoUsuarioId" class="form-label">Tipo Usuário</label>
                    <select asp-for="TipoUsuarioId" asp-items="ViewBag.TiposUsuario" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="TipoUsuarioId" class="text-danger small"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="StatusUsuarioId" class="form-label">Status</label>
                    <select asp-for="StatusUsuarioId" asp-items="ViewBag.StatusUsuarios" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="StatusUsuarioId" class="text-danger small"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="DataAdmissao" class="form-label">Data de Admissão</label>
                    <input asp-for="DataAdmissao" type="datetime-local" class="form-control" />
                    <span asp-validation-for="DataAdmissao" class="text-danger small"></span>
                </div>
            </div>

            <!-- Deficiência -->
            <h3 class="mb-3 mt-4 border-bottom pb-2">Deficiência (caso possua)</h3>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="form-check mb-3">
                        <input asp-for="PossuiDeficiencia" class="form-check-input" type="checkbox" />
                        <label asp-for="PossuiDeficiencia" class="form-check-label">Possui Deficiência</label>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Deficiencias[0].CID" class="form-label">CID</label>
                    <input asp-for="Deficiencias[0].CID" class="form-control" />
                    <span asp-validation-for="Deficiencias[0].CID" class="text-danger small"></span>
                </div>
                <div class="col-md-8 mb-3">
                    <label asp-for="Deficiencias[0].Descricao" class="form-label">Descrição</label>
                    <input asp-for="Deficiencias[0].Descricao" class="form-control" />
                    <span asp-validation-for="Deficiencias[0].Descricao" class="text-danger small"></span>
                </div>
            </div>

            <!-- Endereço -->
            <h3 class="mb-3 mt-4 border-bottom pb-2">Endereço</h3>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Enderecos[0].CEP" class="form-label">CEP</label>
                    <input asp-for="Enderecos[0].CEP" class="form-control" />
                    <span asp-validation-for="Enderecos[0].CEP" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Enderecos[0].Logradouro" class="form-label">Logradouro</label>
                    <input asp-for="Enderecos[0].Logradouro" class="form-control" />
                    <span asp-validation-for="Enderecos[0].Logradouro" class="text-danger small"></span>
                </div>
                <div class="col-md-2 mb-3">
                    <label asp-for="Enderecos[0].Numero" class="form-label">Número</label>
                    <input asp-for="Enderecos[0].Numero" class="form-control" />
                    <span asp-validation-for="Enderecos[0].Numero" class="text-danger small"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Enderecos[0].Bairro" class="form-label">Bairro</label>
                    <input asp-for="Enderecos[0].Bairro" class="form-control" />
                    <span asp-validation-for="Enderecos[0].Bairro" class="text-danger small"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Enderecos[0].Cidade" class="form-label">Cidade</label>
                    <input asp-for="Enderecos[0].Cidade" class="form-control" />
                    <span asp-validation-for="Enderecos[0].Cidade" class="text-danger small"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Enderecos[0].UF" class="form-label">UF</label>
                    <input asp-for="Enderecos[0].UF" class="form-control" />
                    <span asp-validation-for="Enderecos[0].UF" class="text-danger small"></span>
                </div>
            </div>

            <!-- Contato -->
            <h3 class="mb-3 mt-4 border-bottom pb-2">Contato</h3>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Telefones[0].Numero" class="form-label">Número</label>
                    <input asp-for="Telefones[0].Numero" class="form-control" />
                    <span asp-validation-for="Telefones[0].Numero" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Telefones[0].Tipo" class="form-label">Tipo</label>
                    <input asp-for="Telefones[0].Tipo" class="form-control" />
                    <span asp-validation-for="Telefones[0].Tipo" class="text-danger small"></span>
                </div>
            </div>

            <!-- Botão -->
            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
            </div>
        </form>

    </div>

    <div class="card-footer text-center">
        <a href="@Url.Action("Index", "Usuario")" class="btn btn-secondary">Voltar</a>
    </div>
</div>

<script>
    function updateIndices(containerId, itemClass, inputNamePrefix) {
        const container = document.getElementById(containerId);
        const items = container.getElementsByClassName(itemClass);

        for (let i = 0; i < items.length; i++) {
            const inputs = items[i].querySelectorAll('input');
            inputs.forEach(input => {
                // Ajusta o atributo name para o índice correto: Exemplo: Enderecos[0].CEP
                const prop = input.name.split('.').pop();
                input.name = `${inputNamePrefix}[${i}].${prop}`;
            });
        }
    }

    // Endereços
    document.getElementById('btn-add-endereco').addEventListener('click', function() {
        const container = document.getElementById('enderecos-container');
        const count = container.getElementsByClassName('endereco-item').length;

        const novoEndereco = document.createElement('div');
        novoEndereco.classList.add('endereco-item', 'mb-3');
        novoEndereco.innerHTML = `
            <input name="Enderecos[${count}].CEP" placeholder="CEP" class="form-control mb-1" />
            <input name="Enderecos[${count}].Logradouro" placeholder="Logradouro" class="form-control mb-1" />
            <input name="Enderecos[${count}].Numero" placeholder="Número" class="form-control mb-1" />
            <button type="button" class="btn btn-danger btn-sm btn-remove-endereco">Remover</button>
            <hr />
        `;
        container.appendChild(novoEndereco);
    });

    // Telefones
    document.getElementById('btn-add-telefone').addEventListener('click', function() {
        const container = document.getElementById('telefones-container');
        const count = container.getElementsByClassName('telefone-item').length;

        const novoTelefone = document.createElement('div');
        novoTelefone.classList.add('telefone-item', 'mb-3');
        novoTelefone.innerHTML = `
            <input name="Telefones[${count}].Numero" placeholder="Número" class="form-control mb-1" />
            <input name="Telefones[${count}].Tipo" placeholder="Tipo" class="form-control mb-1" />
            <button type="button" class="btn btn-danger btn-sm btn-remove-telefone">Remover</button>
            <hr />
        `;
        container.appendChild(novoTelefone);
    });

    // Delegação de eventos para remover endereços
    document.getElementById('enderecos-container').addEventListener('click', function(e) {
        if (e.target && e.target.classList.contains('btn-remove-endereco')) {
            e.target.parentElement.remove();
            updateIndices('enderecos-container', 'endereco-item', 'Enderecos');
        }
    });

    // Delegação de eventos para remover telefones
    document.getElementById('telefones-container').addEventListener('click', function(e) {
        if (e.target && e.target.classList.contains('btn-remove-telefone')) {
            e.target.parentElement.remove();
            updateIndices('telefones-container', 'telefone-item', 'Telefones');
        }
    });
</script>
